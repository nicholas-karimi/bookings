    <!-- sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let attention = new Prompt();
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // date picker
        const elem = document.getElementById('reservation-dates');

        const rangepicker = new DateRangePicker(elem, {
            format: 'yyyy-mm-dd',
        })

        const elem2 = document.getElementById('test');

        elem2.addEventListener('click', () => {
            // attention.error({msg: "from Nicholas.."});
            let html = `
              <form action="/reservations" class="needs-validation" id="reservation-dates-modal" novalidate>
                    <div class="row" id="reservation-dates">
                        <div class="col-md-6">
                            <input type="text" disabled name="start" class="form-control" id="start_date" placeholder="Checkin Date">
                        </div>
                        <div class="col-md-6">
                            <input type="text" disabled name="end" class="form-control" id="end_date" placeholder="Checkout Date">
                        </div>
                    </div>
                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-primary">Search Availability</button>

                    </div>
                </form>
            `

            attention.SearchAvailability({
                msg: html,
                title: "Check Availability"
            });
        })

        function Prompt() {
            let toast = function (c) {
                const {
                    msg = "",
                        icon = "success",
                        position = "top-end",
                } = c
                const Toast = Swal.mixin({
                    toast: true,
                    title: msg,
                    position: position,
                    icon: icon,
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.onmouseenter = Swal.stopTimer;
                        toast.onmouseleave = Swal.resumeTimer;
                    }
                });
                Toast.fire({

                });
            }
            let success = function (c) {
                const {
                    title = "",
                        msg = "",
                        footer = "",
                        icon = "success"
                } = c;
                Swal.fire({
                    title: title,
                    text: msg,
                    icon: "success",
                    footer: footer
                })
            }
            let error = function (c) {
                const {
                    title = "",
                        msg = "",
                        footer = "",
                        icon = "error"
                } = c;
                Swal.fire({
                    title: title,
                    text: msg,
                    icon: "error",
                    footer: footer
                })
            }
            // custom search availability alrt
            async function SearchAvailability(c) {
                const {
                    msg = "",
                        title = "",
                } = c;
                const {
                    value: formValues
                } = await Swal.fire({
                    title: title,
                    html: msg,
                    backdrop: false,
                    focusConfirm: false,
                    showCancelButton: true,
                    willOpen: () => {
                        const elem = document.getElementById('reservation-dates-modal');
                        const rangepicker = new DateRangePicker(elem, {
                            format: 'yyyy-mm-dd',
                            showOnFocus: true,
                        })
                    },
                    preConfirm: () => {
                        return [
                            document.getElementById('start').value,
                            document.getElementById('end').value
                        ]
                    },
                    // show dates after modal open
                    didOpen: () => {
                        // remove intput disabled attribute
                        document.getElementById('start_date').removeAttribute('disabled');
                        document.getElementById('end_date').removeAttribute('disabled');


                    }
                })
                if (formValues) {
                    Swal.fire(JSON.stringify(formValues))
                }
            }
            return {
                toast: toast,
                success: success,
                error: error,
                SearchAvailability: SearchAvailability,
            }
        }

        function notifyModal(title, text, icon, confirmationText) {
            Swal.fire({
                title: title,
                text: text,
                icon: icon,
                confirmButtonText: confirmationText
            })
        }
    </script>


